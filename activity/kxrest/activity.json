{
  "name": "knox-rest",
  "type": "flogo:activity",
  "ref": "github.com/mtorre-iot/flogo-contrib/activity/kxrest",
  "version": "0.0.1",
  "title": "Invoke KNOX Analytics REST Service",
  "description": "Invoke a KNOX Analytics REST Activity",
  "homepage": "https://github.com/mtorre-iot/flogo-contrib/tree/master/activity/kxrest",
  "input":[
    {
      "name": "function",
      "type": "string",
      "required": true
    },
    {
      "name": "outputTag",
      "type": "string",
      "required": true
    },
    {
      "name": "method",
      "type": "string",
      "required": true,
      "allowed" : ["GET", "POST", "PUT", "PATCH", "DELETE"]
    },
    {
      "name": "uri",
      "type": "string",
      "required": true
    },
    {
      "name": "proxy",
      "type": "string",
      "required": false
    },
    {
      "name": "pathParams",
      "type": "params"
    },
    {
      "name": "queryParams",
      "type": "params"
    },
    {
      "name": "header",
      "type": "params"
    },
    {
      "name": "skipSsl",
      "type": "boolean",
      "value": false
    },
    {
      "name": "content",
      "type": "any"
    }
  ],
  "output": [
    {
      "name": "result",
      "type": "any"
    },
    {
      "name": "status",
      "type": "integer"
    }
  ]
}
