{
  "name": "flogo-amqpact",
  "type": "flogo:activity",
  "ref": "github.com/mtorre-iot/flogo-contrib/activity/amqpact",
  "version": "0.0.1",
  "title": "Send AMQP Message",
  "author": "Mario Torre <mtorre.work@gmail.com>",
  "description": "AMQP Publish Activity",
  "homepage": "https://github.com/mtorre-iot/flogo-contrib/tree/master/activity/amqpact",
  "input":[
    {
      "name": "responseHostName",
      "type": "string",
      "value": "localhost",
      "required": true
    },
    {
      "name": "responsePort",
      "type": "string",
      "value": "5672",
      "required": true
    },
    {
      "name": "responseExchangeName",
      "type": "string",
      "value": "",
      "required": true
    },
    {
      "name": "responseExchangeType",
      "type": "string",
      "value": "topic",
      "required": true
    },
    {
      "name": "responseRoutingKey",
      "type": "string",
      "value": "#",
      "required": true
    },
    {
      "name": "responseUser",
      "type": "string",
      "value": "guest",
      "required": true
    },    
    {
      "name": "responsePassword",
      "type": "string",
      "value": "guest",
      "required": true
    },
    {
      "name": "responseDurable",
      "type": "boolean",
      "value": false
    },
    {
      "name": "responseAutoDelete",
      "type": "boolean",
      "value": false
    },
    {
      "name": "responseReliable",
      "type": "boolean",
      "value": true
    }
    ,{
      "name": "inputMessage",
      "type": "string",
      "value": "",
      "required": true
    }
  ],
  "output": [
    {
      "name": "outputMessage",
      "type": "string"
    }
  ]
}
